# Social Login Configuration
# IMPORTANT: If using 'php artisan serve', replace 'localhost' with 'localhost:8000' in redirect URLs.
# The URL must EXACTLY match what you browse in your browser to maintain the session.

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here
GOOGLE_REDIRECT_URL=http://localhost:8000/auth/google/callback

# Facebook OAuth
FACEBOOK_CLIENT_ID=your-facebook-app-id-here
FACEBOOK_CLIENT_SECRET=your-facebook-app-secret-here
FACEBOOK_REDIRECT_URL=http://localhost:8000/auth/facebook/callback

# Twitter / X OAuth
TWITTER_CLIENT_ID=your-x-api-key-here
TWITTER_CLIENT_SECRET=your-x-api-secret-here
TWITTER_REDIRECT_URL=http://localhost:8000/auth/twitter/callback
